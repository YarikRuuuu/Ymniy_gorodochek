#include <Wire.h>
#include <VL53L0X.h>
VL53L0X lox;
#include <WiFi.h>
#include <HTTPClient.h>

// Параметры Wi-Fi
const char* ssid = "YOUR_SSID";
const char* password = "YOUR_PASSWORD";

// IP-адрес сервера и путь
const char* serverIP = "192.168.1.100"; // замените на адрес вашего сервера
const int serverPort = 80; // порт, если не 80 — укажите свой
const char* endpoint = "/receive"; // путь на сервере
int main() {
  const bool mesto = True
  h


void setup() {
  // Инициализация последовательного порта
  Serial.begin(115200);
  // Инициализация датчика
  Wire.begin();
  lox.init();
  lox.setTimeout(500);
  // параметры для режима высокой точности
  lox.setMeasurementTimingBudget(200000);


  WiFi.begin(ssid, password);
  Serial.print("Подключение к Wi-Fi");

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWi-Fi подключен!");
}
}
void charging(){
  while (millis()<60000 and dist < 50) {
  time = millis()
  
  charge = time/60000*100
  }
}
void loop() {
  // Измерение
  float dist = lox.readRangeSingleMillimeters();
  // Вывод измеренных значений в терминал
  Serial.println("Distance  = " + String(dist, 0) + " mm  ");
  delay(250);
  if dist < 50:
    
    bool mesto = False
    charging();
    main();
    delay(5000);


  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    
    int mesto; // переменная, которую отправляем
    String url = "http://" + String(serverIP) + ":" + String(serverPort) + String(endpoint) + "?value=" + String(mesto);

    Serial.println("Отправка GET-запроса: " + url);

    http.begin(url);
    int httpResponseCode = http.GET();

    if (httpResponseCode > 0) {
      Serial.println("Ответ сервера: " + String(httpResponseCode));
      String response = http.getString();
      Serial.println("Тело ответа: " + response);
    } else {
      Serial.println("Ошибка отправки запроса");
    }

    http.end();
  }

  delay(10000); // отправка каждые 10 секунд
}
}
